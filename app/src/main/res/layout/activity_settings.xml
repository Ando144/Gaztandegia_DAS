<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



        <LinearLayout
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#FFFFFF"
            android:elevation="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- Item: Nuevo Lote  -->
            <LinearLayout
                android:id="@+id/navNuevoLote"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:colorFilter="#6200EE"
                    android:src="@android:drawable/ic_input_add" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Nuevo Lote"
                    android:textColor="#9E9E9E"
                    android:textSize="10sp"
                    android:textStyle="bold" />



            </LinearLayout>

            <!-- Item: Ver Lotes -->
            <LinearLayout
                android:id="@+id/navVerLotes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:colorFilter="#9E9E9E"
                    android:src="@android:drawable/ic_menu_agenda" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Ver Lotes"
                    android:textColor="#9E9E9E"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Item: Estadísticas -->
            <LinearLayout
                android:id="@+id/navEstadisticas"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:colorFilter="#9E9E9E"
                    android:src="@android:drawable/ic_menu_sort_by_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Estadísticas"
                    android:textColor="#9E9E9E"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Item: Ajustes -->
            <LinearLayout
                android:id="@+id/navAjustes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#EDE7F6"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:colorFilter="#9E9E9E"
                    android:src="@android:drawable/ic_menu_manage"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Ajustes"
                    android:textColor="#6200EE"
                    android:textSize="10sp" />
                <!-- Indicador activo -->
                <View
                    android:layout_width="24dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:background="#6200EE" />

            </LinearLayout>

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
