<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutBuscador"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:hint="Buscar lote..."
        app:startIconDrawable="@android:drawable/ic_menu_search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnFiltroLista">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputBuscador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFiltroLista"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:insetBottom="0dp"
        android:insetTop="0dp"
        app:icon="@android:drawable/ic_menu_sort_by_size"
        app:iconPadding="0dp"
        app:iconGravity="textStart"
        app:iconTint="#6200EE"
        app:strokeColor="#6200EE"
        app:layout_constraintTop_toTopOf="@id/layoutBuscador"
        app:layout_constraintBottom_toBottomOf="@id/layoutBuscador"
        app:layout_constraintEnd_toEndOf="parent" />

    <ListView
        android:id="@+id/listaLotes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="12dp"
        app:layout_constraintTop_toBottomOf="@id/layoutBuscador"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/txtListaVacia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No hay lotes"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>